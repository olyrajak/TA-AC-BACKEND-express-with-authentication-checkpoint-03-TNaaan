<%- include("./partials/header.ejs") %>
<main class="container">
  <div class="mt-5 p-5 bg-primary text-white rounded text-center">
    <h1>Welcome to Expense Tracker</h1>
  </div>
  <div class="card mt-5 p-5 alert alert-warning">
    <div class="card-body text-center">
      <h3>Your can manage your Income/Expense in your fingertips</h3>
    </div>
  </div>

  <div class="card mt-5">
    <div class="card-body">
      <div class="d-grid gap-2 d-md-block text-center">
        <% if(!user){ %>
        <a class="btn btn-primary btn-lg m-5" type="submit" href="/users/login"
          >Login</a
        >
        <a
          class="btn btn-success btn-lg m-5"
          type="submit"
          href="/users/register"
          >Sign up</a
        >
        <% } else{ %>
        <a class="btn btn-success btn-lg m-5" type="submit" href="/users"
          >Dashboard</a
        >
        <% } %>
      </div>
    </div>
  </div>
</main>
<%- include("./partials/footer.ejs") %>
